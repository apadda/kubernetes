{
	"kind": "StorageClass",
	"apiVersion": "storage.k8s.io/v1",
	"metadata": {
		"name": "jenkins-storage",
		"labels": {
			"app": "jenkins-storage"
		}
	},
	"provisioner": "kubernetes.io/aws-ebs",
	"parameters": {
		"type": "gp2",
		"zone": "eu-west-2a"
	},
	"allowVolumeExpansion": true,
	"spec": {
		"accessModes": [
			"ReadWriteOnce"
		],
		"resources": {
			"requests": {
				"storage": "2Gi"
			}
		}
	}
}